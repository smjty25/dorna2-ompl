{
  "version": 5,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "VCPKG_FEATURE_FLAGS": "manifests",
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },

    {
      "name": "windows-vs2022",
      "displayName": "Windows x64 (VS2022 + vcpkg)",
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "toolset": "v143",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "linux-ninja",
      "displayName": "Linux x64 (Ninja + vcpkg)",
      "generator": "Ninja",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "macos-ninja",
      "displayName": "macOS arm64/x64 (Ninja + vcpkg)",
      "generator": "Ninja",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "rpi-arm64",
      "displayName": "Raspberry Pi (64-bit OS, Ninja + vcpkg)",
      "generator": "Ninja",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm64-linux",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "rpi-armhf",
      "displayName": "Raspberry Pi (32-bit OS, Ninja + vcpkg)",
      "generator": "Ninja",
      "inherits": "base",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "arm-linux",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],

  "buildPresets": [
    { "name": "build-windows", "configurePreset": "windows-vs2022" },
    { "name": "build-linux",   "configurePreset": "linux-ninja" },
    { "name": "build-macos",   "configurePreset": "macos-ninja" },
    { "name": "build-rpi64",   "configurePreset": "rpi-arm64" },
    { "name": "build-rpi32",   "configurePreset": "rpi-armhf" }
  ]
}
